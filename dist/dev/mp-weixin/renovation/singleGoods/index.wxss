
.slingleGoods {
	width: 100%;
	height: auto;
	padding: 0 24rpx;
}
.goods_list {
	width: 100%;
	height: auto;
	background: #fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-bottom: 10rpx;
	border-radius: 14rpx;
	overflow: hidden;
	position: relative;
}
.goosImg {
	width: 308rpx;
	height: 308rpx;
	position: relative;
}
.goosItemInfo {
	width: calc(100% - 308rpx);
	padding: 12rpx;
	font-size: 26rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.goosItemTitle {
	width: 100%;
	height: auto;
	font-size: 24rpx;
}
.goodsItemDetail {
	line-height: 45rpx;
	margin-top: 16rpx;
}

