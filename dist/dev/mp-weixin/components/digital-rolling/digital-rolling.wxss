
.digital-rolling {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	position: relative;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	height: 50rpx;
	width: 100%;
}
.digital-rolling-each-item {
	height: 50rpx;
	width: 20rpx;
	font-size: 32rpx;
	text-align: center;
}
.digital-rolling-each-item-cur-item {
	height: 100%;
	font-size: 28rpx;
	line-height: 50rpx;
}
.digital-rolling-each-item-cur-item.active{
	font-size: 32rpx;
	line-height: 46rpx;
}
.digital-rolling-stopmove {
	position: absolute;
	width: 750rpx;
	height: 50rpx;
	z-index: 101;
}
.none{
	display: none;
}
.hint{
	line-height: 46rpx;
}

